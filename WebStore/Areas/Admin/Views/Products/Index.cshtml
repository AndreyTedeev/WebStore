@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(product => product.Id)</th>
            <th>@Html.DisplayNameFor(product => product.Name)</th>
            <th>@Html.DisplayNameFor(product => product.Brand)</th>
            <th>@Html.DisplayNameFor(product => product.Category)</th>
            <th>@Html.DisplayNameFor(product => product.ImageUrl)</th>
            <th>@Html.DisplayNameFor(product => product.Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="text-danger">
                        <i class="glyphicon glyphicon-edit"></i>Edit
                    </a>
                </td>
                <td>@Html.DisplayFor(model => product.Id)</td>
                <td>@Html.DisplayFor(model => product.Name)</td>
                <td>@Html.DisplayFor(model => product.Brand.Name)</td>
                <td>@Html.DisplayFor(model => product.Category.Name)</td>
                <td><img src="~/images/shop/@product.ImageUrl" width="50" alt="@product.Name" /></td>
                <td>@Html.DisplayFor(model => product.Price)</td>
                <td>
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="text-danger">
                        <i class="glyphicon glyphicon-trash"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>