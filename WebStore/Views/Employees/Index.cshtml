@model IEnumerable<WebStore.Models.Employee>

@{
    Layout = "_LayoutEmployees";
    ViewData["Title"] = "Employees";
}

<h3>EMPLOYEES</h3>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@employee.FullName</a>
                </td>
                <td>@employee.Age</td>
                <td>
                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">
                        <i class="fa fa-info-circle"></i>
                    </a>|<a href="#">
                        <i class="fa fa-edit"></i>
                    </a>|<a href="#" class="text-danger">
                        <i class="fa fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<a asp-controller="Home" asp-action="Index">Index</a>
