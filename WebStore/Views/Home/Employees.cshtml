@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home - Employees</title>
</head>
<body>
    <h3>EMPLOYEES</h3>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model) {
                <tr>
                    <td>@employee.Id</td>
                    <td><a href="~/Home/EmployeeCard/@employee.Id">@employee.FullName</a> </td>
                    <td>@employee.Age</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <a href="/">Index</a>
</body>
</html>
